<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_page_style">
        <item name="fontFamily"></item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="body_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily"></item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="second_body_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8D8D8D</item>
        <item name="fontFamily"></item>
    </style>

    <style name="error_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/error_color</item>
        <item name="fontFamily"></item>
    </style>

    <style name="product_name_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily"></item>
    </style>

    <style name="h2_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily"></item>
    </style>

    <style name="h2_highlight_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily"></item>
    </style>


    <style name="h3_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily"></item>
    </style>


    <style name="special_price_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily"></item>
    </style>

    <style name="regular_price_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/regular_price_color</item>
        <item name="fontFamily"></item>
    </style>

    <style name="product_name_detail_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily"></item>
    </style>

    <style name="special_price_detail_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily"></item>
    </style>

    <style name="special_price_hightlight_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily"></item>
    </style>

    <style name="regular_price_detail_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/regular_price_color</item>
        <item name="fontFamily"></item>
    </style>

    <style name="category_name_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily"></item>
    </style>

    <style name="cta_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="fontFamily"></item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/background_cta_button</item>
    </style>

    <style name="button_style_normal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily"></item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/background_button_normal</item>
    </style>

    <style name="text_button_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily"></item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/background_text_button</item>
    </style>


    <style name="edittext_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">r</item>
        <item name="android:background">@drawable/background_edittext_normal</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:gravity">start|top</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:width">300dp</item>
        <item name="android:height">60dp</item>
        <!--        <item name="android:shadowDx">0</item>-->
        <!--        <item name="android:shadowDy">-1</item>-->
        <!--        <item name="android:shadowRadius">0.2</item>-->
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>

    </style>
    <style name="line" parent="Widget.Material3.TextInputLayout.FilledBox"/>

    <style name="MyMaterialTheme">MyMaterialTheme</style>
</resources>